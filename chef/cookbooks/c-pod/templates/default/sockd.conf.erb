# Dante Socks server config for Repo
#
logoutput: /var/log/sockd.log
internal: <%= @interface %> port = 1080
external: 192.168.122.1
method: none
clientmethod: none
timeout.io: 0

# Who do we let in?
#
client pass { # The office
        from: 10.0.0.0/8 port 1-65535 to: 0.0.0.0/0
        log: connect
}
client pass { # The VPN
        from: 192.168.40.0/24 to: 192.168.122.0/24
        log: connect error
}
# Where can they go?
#
pass {
        from: 10.0.0.0/8 to: 10.0.0.0/8
        log: connect error
        protocol: tcp udp
}
pass {
        from: 10.0.0.0/8 to: 192.168.122.0/24
        log: connect error
        protocol: tcp udp
}
block {
        from: 0.0.0.0/0 to: 0.0.0.0/0
        log: connect error
}
