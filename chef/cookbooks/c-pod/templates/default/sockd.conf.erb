# Dante Socks server config for C-Pod server
#
logoutput: /var/log/sockd.log
internal: <%= @public %> port = 1080
external: <%= @private %>
socksmethod: none
timeout.io: 0

# Let in all the private addresses
#
client pass {
        from: 10.0.0.0/8 port 1-65535 to: <%= @public %>
}
client pass {
        from: 172.16.0.0/12 to: <%= @public %>
}
client pass {
        from: 192.168.0.0/16 to: <%= @public %>
}
# Record everyone else and fail them
#
client block {
        from: 0.0.0.0/0 to: 0.0.0.0/0
        log: connect error
}
# Allow them to go to the KVM default network
#
socks pass {
        from: 0.0.0.0/0 to: <%= node[:network][:interfaces][@private.to_sym][:routes].detect {|r| r[:family] == "inet"}[:destination] %>
        log: connect disconnect
        protocol: tcp udp
}
socks block {
        from: 0.0.0.0/0 to: 0.0.0.0/0
        log: connect
}
