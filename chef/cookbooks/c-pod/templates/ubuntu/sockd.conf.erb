# Dante Socks server config for C-Pod server
# This is for version 1.19 (Ubuntu)
# Public interface: <%= @public_if %>
# Private interface: <%= @private_if %>
#
logoutput: /var/log/sockd.log
internal: <%= @public_if %> port = 1080
external: <%= @private_if %>
method: none
iotimeout: 0

# Let in all the private addresses
#
client pass {
  from: 10.0.0.0/8 port 1-65535 to: <%= cidr @public_if %>
}
client pass {
  from: 172.16.0.0/12 to: <%= cidr @public_if %>
}
client pass {
  from: 192.168.0.0/16 to: <%= cidr @public_if %>
}
# Record everyone else and fail them
#
client block {
  from: 0.0.0.0/0 to: 0.0.0.0/0
  log: connect error
}
# Allow them to go to the private network
#
pass {
  from: 0.0.0.0/0 to: <%= cidr @private_if %>
  log: connect disconnect
  protocol: tcp udp
}
block {
  from: 0.0.0.0/0 to: 0.0.0.0/0
  log: connect
}
